<!DOCTYPE html>
<html>
<head>
    <title>Admin Panel</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { font-family: monospace; background: #000; color: #0f0; padding: 20px; }
        .container { max-width: 1200px; margin: 0 auto; }
        h1 { font-size: 24px; margin-bottom: 20px; border-bottom: 2px solid #0f0; padding-bottom: 10px; }
        h2 { font-size: 18px; margin-bottom: 15px; margin-top: 25px; }
        .status-bar { background: #111; padding: 15px; margin-bottom: 20px; border: 1px solid #0f0; display: flex; justify-content: space-between; align-items: center; }
        .status-item { margin: 0 10px; }
        .btn { padding: 8px 15px; background: #0f0; color: #000; border: none; cursor: pointer; font-family: monospace; margin-right: 10px; }
        .btn:hover { background: #0a0; }
        .btn-danger { background: #f00; }
        .btn-danger:hover { background: #a00; }
        .section { background: #111; padding: 20px; margin-bottom: 20px; border: 1px solid #0f0; }
        .contest-form { display: flex; gap: 10px; margin-bottom: 20px; }
        .contest-form input { padding: 8px; background: #000; color: #0f0; border: 1px solid #0f0; font-family: monospace; flex: 1; }
        table { width: 100%; border-collapse: collapse; }
        th, td { padding: 8px; text-align: left; border-bottom: 1px solid #333; }
        th { background: #111; color: #0f0; }
        tr:hover { background: #111; }
        .delete-btn { padding: 4px 8px; background: #f00; color: #fff; border: none; cursor: pointer; font-size: 12px; }
        .delete-btn:hover { background: #a00; }
        .upload-form { margin-top: 15px; }
        .file-input { margin-bottom: 10px; }
        .token-status { padding: 5px 10px; border-radius: 3px; }
        .token-valid { background: #020; border: 1px solid #0f0; }
        .token-invalid { background: #200; border: 1px solid #f00; }
        .logout-link { color: #f00; text-decoration: none; }
        .logout-link:hover { color: #a00; }
    </style>
</head>
<body>
    <div class="container">
        <h1>ADMIN PANEL</h1>
        
        <div class="status-bar">
            <div style="display: flex; align-items: center;">
                <span class="status-item">NIFTY: <%= currentPrice ? currentPrice.toFixed(2) : 'N/A' %></span>
                <span class="status-item">CLOSE: <%= lastClosePrice ? lastClosePrice.toFixed(2) : 'N/A' %></span>
                <span class="status-item token-status <%= isTokenValid ? 'token-valid' : 'token-invalid' %>">
                    TOKEN: <%= isTokenValid ? 'VALID' : 'INVALID' %>
                </span>
            </div>
            <div>
                <button onclick="refreshToken()" class="btn">REFRESH TOKEN</button>
                <button onclick="startFetching()" class="btn">START FETCHING</button>
                <a href="/admin/logout" class="logout-link">LOGOUT</a>
            </div>
        </div>
        
        <div class="section">
            <h2>CONTEST MANAGEMENT</h2>
            
            <form method="post" action="/admin/new-contest" class="contest-form">
                <input type="text" name="contestName" placeholder="Contest Name (optional)" maxlength="100">
                <button type="submit" class="btn">START NEW CONTEST</button>
            </form>
            
            <% if (activeContest) { %>
                <p>ACTIVE: <%= activeContest.name %> (ID: <%= activeContest.id %>)</p>
            <% } else { %>
                <p>NO ACTIVE CONTEST</p>
            <% } %>
        </div>
        
        <div class="section">
            <h2>BULK UPLOAD</h2>
            <form method="post" action="/admin/bulk-upload" enctype="multipart/form-data" class="upload-form">
                <div class="file-input">
                    <input type="file" name="csvFile" accept=".csv" required>
                    <span style="margin-left: 10px; color: #888;">Format: name,value (CSV)</span>
                </div>
                <button type="submit" class="btn">UPLOAD CSV</button>
            </form>
        </div>
        
        <div class="section">
            <h2>CURRENT PREDICTIONS</h2>
            
            <% if (predictions.length === 0) { %>
                <p>No predictions for current contest</p>
            <% } else { %>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>NAME</th>
                            <th>PREDICTION</th>
                            <th>SUBMITTED</th>
                            <% if (currentPrice) { %>
                            <th>DIFF</th>
                            <% } %>
                            <th>ACTION</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% predictions.forEach(prediction => { %>
                        <tr>
                            <td><%= prediction.id %></td>
                            <td><%= prediction.name %></td>
                            <td><%= prediction.predicted_value.toFixed(2) %></td>
                            <td><%= new Date(prediction.submitted_at).toLocaleString() %></td>
                            <% if (currentPrice) { %>
                            <td><%= Math.abs(prediction.predicted_value - currentPrice).toFixed(2) %></td>
                            <% } %>
                            <td>
                                <form method="post" action="/admin/delete-prediction/<%= prediction.id %>" style="display:inline;">
                                    <button type="submit" class="delete-btn" onclick="return confirm('Delete this prediction?')">DELETE</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } %>
        </div>
        
        <div class="section">
            <h2>PAST CONTESTS</h2>
            <% if (contests.length === 0) { %>
                <p>No contests</p>
            <% } else { %>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>NAME</th>
                            <th>CREATED</th>
                            <th>STATUS</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% contests.forEach(contest => { %>
                        <tr>
                            <td><%= contest.id %></td>
                            <td><%= contest.name %></td>
                            <td><%= new Date(contest.created_at).toLocaleString() %></td>
                            <td><%= contest.is_active ? 'ACTIVE' : 'ENDED' %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } %>
        </div>
    </div>
    
    <script>
        async function refreshToken() {
            try {
                const response = await fetch('/admin/refresh-token', { method: 'POST' });
                const data = await response.json();
                if (data.success) {
                    alert('Token refreshed successfully');
                    location.reload();
                } else {
                    alert('Failed to refresh token. Check request token in .env');
                }
            } catch (error) {
                alert('Error refreshing token');
            }
        }
        
        async function startFetching() {
            try {
                const response = await fetch('/admin/start-fetching', { method: 'POST' });
                const data = await response.json();
                if (data.success) {
                    alert(data.message);
                } else {
                    alert(data.message);
                }
            } catch (error) {
                alert('Error starting fetch');
            }
        }
    </script>
</body>
</html>